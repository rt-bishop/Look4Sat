<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.infoScreen.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/info_title_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/placeholder"
            android:src="@drawable/ic_nav_entries"
            app:layout_constraintBottom_toBottomOf="@+id/info_title"
            app:layout_constraintEnd_toStartOf="@+id/info_title"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/info_title" />

        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_name"
            android:textColor="@color/themeLight"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/info_title_img"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/info_version"
            android:textColor="@color/themeLight"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_title" />

        <TextView
            android:id="@+id/info_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/info_subtitle"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_version" />

        <Button
            android:id="@+id/info_btn_github"
            style="@style/InfoButton"
            android:layout_marginTop="8dp"
            android:text="@string/info_github"
            app:icon="@drawable/ic_github"
            app:layout_constraintEnd_toStartOf="@+id/info_btn_fdroid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_subtitle" />

        <Button
            android:id="@+id/info_btn_fdroid"
            style="@style/InfoButton"
            android:text="@string/info_fdroid"
            app:icon="@drawable/ic_fdroid"
            app:layout_constraintBaseline_toBaselineOf="@+id/info_btn_github"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/info_btn_github" />

        <Button
            android:id="@+id/info_btn_donate"
            style="@style/InfoButton"
            android:layout_marginTop="8dp"
            android:text="@string/info_bmc"
            app:icon="@drawable/ic_bmc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_btn_github" />

        <TextView
            android:id="@+id/info_thanks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/info_thanks"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_btn_donate" />

        <TextView
            android:id="@+id/info_warranty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/info_warranty"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/info_thanks"
            app:layout_constraintStart_toStartOf="@+id/info_thanks"
            app:layout_constraintTop_toBottomOf="@+id/info_thanks" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
